// figscript-package/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./dist/types", // Output .d.ts files here (relative to project root)
    "rootDir": "./src",               // Root directory of source files for declaration file structure
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true, // Ensures each file can be safely transpiled
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
    // "outDir" can be omitted if Rollup handles all JS output,
    // but ensure "declarationDir" is correctly pointing for .d.ts files.
  },
  "include": ["src/**/*"], // Files to include in compilation
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.mjs",
    "**/*.test.ts", // Example: exclude test files
    "**/*.spec.ts"  // Example: exclude spec files
  ]
}